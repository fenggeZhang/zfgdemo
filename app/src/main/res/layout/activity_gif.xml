<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_apl_color"
    tools:context=".activity.image.GifActivity">

    <include layout="@layout/common_titlebar_layout"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <ImageView
                android:id="@+id/gif1_iv"
                android:layout_width="220dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/gif2_iv"
                android:layout_width="220dp"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/gif3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/gif4_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>


    </TableLayout>


</LinearLayout>